{
    "name": "lameco/craft-twig-components",
    "type": "craft-plugin",
    "require": {
        "php": ">=8.3",
        "craftcms/cms": "^4.9"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "lameco\\crafttwigcomponents\\": "src/"
        }
    },
    "extra": {
        "name": "Lam√©co Twig Components",
        "handle": "_craft-twig-components",
        "developer": "Lameco",
        "documentationUrl": ""
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.3"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
