{
    "name": "lameco/craft-twig-components",
    "type": "craft-plugin",
    "require": {
        "craftcms/cms": "^5",
        "performing/twig-components": "^0.6.1",
        "twig/html-extra": "^3.13",
        "vlucas/phpdotenv": "^5.4.0"
    },
    "require-dev": {
        "craftcms/generator": "^2.1.0",
        "yiisoft/yii2-shell": "^2.0.3"
    },
    "autoload": {
        "psr-4": {
            "lameco\\crafttwigcomponents\\": "src/"
        }
    },
    "extra": {
        "name": "Lam√©co Twig Components",
        "handle": "_craft-twig-components",
        "developer": "Lameco",
        "documentationUrl": ""
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example.dev', '.env');\""
        ]
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.3"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
