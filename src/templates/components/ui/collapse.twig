{% set theme = _globals.get('lameco.components.theme') %}

<div class="collapse__item--js border-b border-slate-200 w-full" x-data="{ expanded: false }">
    <button class="collapse__toggle--js w-full flex justify-between items-center py-3 pl-2 text-slate-800" @click="expanded = ! expanded">
        <span class="text-lg text-left font-semibold w-[80%] py-3">{{ attributes.title }}</span>

        <span class="flex justify-center items-center overflow-hidden {{ theme.ui.collapse.iconWrapper ?? 'w- h-8 bg-black' }}" :class="{ 'rotate-180' : expanded }">
            <i class="absolute text-{{ theme.ui.collapse.iconColor ?? 'black' }} {{ theme.ui.collapse.icon }}"></i>
        </span>
    </button>
    <div x-show="expanded" x-collapse class="pl-2">
        {{ slot }}
    </div>
</div>
