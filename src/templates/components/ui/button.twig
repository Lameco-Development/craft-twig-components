{# Get the theme  #}
{% set theme = theme is defined and theme is not empty ? theme | json_decode : _globals.get('lameco.components.theme') %}

{% if hyper is defined and not hyper.isEmpty() %}
    {% set url = hyper.url %}
    {% set text = hyper.text %}
    {% set target = hyper.target ?? '_self' %}
    {% set variant = hyper.commonButtonType.value ?? attributes.variant ?? 'primary' %}
{% else %}
    {% set url = url ?? null %}
    {% set text = text ?? '' %}
    {% set target = target ?? '_self' %}
    {% set variant = attributes.variant ?? 'primary' %}
{% endif %}

{% set attr = attributes.attr ?? null %}

{% set iconWrapper = attributes.iconWrapper ?? theme.ui.button.iconWrapper ?? '' %}
{% set icon = attributes.icon ?? null %}

{% set classes = html_cva(
    base='inline-flex overflow-hidden group relative transition-all ease-in-out ' ~ theme.ui.button.base ?? 'outline font-semibold',
    variants={
        color: {
            primary: theme.ui.button.color.primary ?? 'bg-primary text-black outline-primary hover:outline-secondary',
            secondary: theme.ui.button.color.secondary ?? 'bg-secondary text-black outline-secondary hover:outline-primary hover:bg-primary',
            outline: theme.ui.button.color.outline ?? 'bg-transparent text-black outline-primary hover:outline-primary hover:bg-primary',
            white: theme.ui.button.color.white ?? 'bg-white text-black outline-white hover:outline-primary hover:bg-primary',
        },
        size: {
            sm: theme.ui.button.size.sm ?? 'px-4 py-3',
            default: theme.ui.button.size.default ?? 'px-6 py-4',
        },
    },
    defaultVariant={
        color: 'primary',
        size: 'default'
    }) %}

{% set variantClasses = classes.apply({color: variant, size: attributes.size ?? null}) %}

{% if url is empty %}
    <button class="{{ attributes.merge({ class: variantClasses }).class }}" {{ attr ? attr | raw : null }}>
{% else %}
    <a href="{{ url }}"
       class="{{ attributes.merge({ class: variantClasses }).class }}"
       target="{{ target }}" {{ attr ? attr | raw : null }}>
{% endif %}

    {% if theme.ui.button.overlay is defined and theme.ui.button.overlay is not empty %}
        <span class="bg-white z-0 absolute top-0 end-0 bottom-0 start-0 transition-transform ease-in-out {{ theme.ui.button.overlay ?? '' }}"></span>
    {% endif %}
    <span class="relative flex items-center justify-between gap-4 z-50 transition-colorsduration-200">
        {% if (iconFirst is defined and iconFirst) and icon is defined and icon is not empty %}
            <span class="flex items-center justify-center {{ iconWrapper }}">
                 <i class="{{ icon }}"></i>
             </span>
        {% endif %}

        <span>{{ slot is not empty ? slot : text }}</span>

        {% if iconFirst is not defined and icon is defined and icon is not empty %}
            <span class="flex items-center justify-center {{ iconWrapper }}">
                <i class="{{ icon }}"></i>
            </span>
        {% endif %}
    </span>

{% if url is empty %}
    </button>
{% else %}
    </a>
{% endif %}
