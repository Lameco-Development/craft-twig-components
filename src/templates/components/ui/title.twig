{# Theme #}
{% set theme = theme is defined and theme is not empty
  ? theme|json_decode
  : _globals.get('lameco.components.theme')
%}

{# Component Variables #}
{% set level = level ?? 'strong' %}
{% set class = class ?? 'block' %}

{# Component #}
{% if slot is not empty %}
    <{{ level }} class="{{ class }}{{ theme.gsapAnimations is defined and theme.gsapAnimations ? ' title-fade-in' : '' }}">{{ slot | striptags(attributes.stripTags ?? '<strong>') | raw }}</{{ level }}>
{% endif %}
